{
    "functions": {
        "api/clips.ts": {
            "runtime": "edge",
            "maxDuration": 30
        },
        "api/clips/[id].ts": {
            "runtime": "edge", 
            "maxDuration": 30
        },
        "api/debug.ts": {
            "runtime": "edge",
            "maxDuration": 10
        }
    },
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, DELETE, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type"
                }
            ]
        }
    ]
}